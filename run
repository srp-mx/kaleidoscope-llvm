BUILD_DIR="build"
PLATFORM="linux"

# Clean
echo "Cleaning..."
mkdir ./${BUILD_DIR}
rm -r ./${BUILD_DIR}/*
echo "Done cleaning."

# Compile
echo "Compiling..."
clang++ -g -O3 ./src/${PLATFORM}_kaleidoscope.cpp `llvm-config --cxxflags` -o ./${BUILD_DIR}/${PLATFORM}_kaleidoscope
echo "Done compiling."

# Run
echo "Running..."
./${BUILD_DIR}/${PLATFORM}_kaleidoscope
echo ""
echo "Done running."
